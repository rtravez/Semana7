<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana7.Views.ElementoPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="txtNombre"></Entry>
            <Entry x:Name="txtUsuario"></Entry>
            <Entry x:Name="txtContrasenia"></Entry>

            <Button x:Name="btnActualizar" Clicked="btnActualizar_Clicked"></Button>
            <Button x:Name="btnEliminar" Clicked="btnEliminar_Clicked"></Button>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>