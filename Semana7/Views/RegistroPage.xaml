<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"            
             x:Class="Semana7.Views.RegistroPage">
    <ContentPage.Content>
        <StackLayout>           

            <Label Text="Nombre"></Label>
            <Entry x:Name="txtNombre" Placeholder="Ingrese nombre"></Entry>
            <Label Text="Usuario"></Label>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese usuario"></Entry>
            <Label Text="Contraseña"></Label>
            <Entry x:Name="txtContrasenia" IsPassword="True" Placeholder="Ingrese contraseña"></Entry>

            <Button x:Name="btnRegistrar" Text="Registrar" Clicked="btnRegistrar_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>